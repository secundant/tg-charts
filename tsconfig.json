{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "rootDir": ".",
    "baseUrl": ".",
    "importHelpers": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noErrorTruncation": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "paths": {
      "~/components": [
        "components"
      ],
      "~/components/*": [
        "components/*"
      ],
      "~/types": [
        "types"
      ],
      "~/types/*": [
        "types/*"
      ],
      "~/utils": [
        "utils"
      ],
      "~/utils/*": [
        "utils/*"
      ],
      "~/hooks": [
        "hooks"
      ],
      "~/hooks/*": [
        "hooks/*"
      ]
    }
  },
  "files": [
    "./declarations.d.ts"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
